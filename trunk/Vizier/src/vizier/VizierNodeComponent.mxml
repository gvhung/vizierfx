<?xml version="1.0" encoding="utf-8"?>
<flexlib:CanvasButton skin="vizier.VizierNodeSkin" xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:flexlib="flexlib.controls.*"
	doubleClickEnabled="true" icon="vizier.VizierEmptySkin" width="{data.width}" height="{data.height}" x="{data.x}" y="{data.y}">
	<mx:Script>
		<![CDATA[
			import com.degrafa.core.IGraphicsStroke;
			import com.degrafa.core.IGraphicsFill;
			import mx.styles.StyleManager;
			
			public var selectstroke:IGraphicsStroke;
			public var highlightstroke:IGraphicsStroke;
			public var selectfill:IGraphicsFill;
			public var highlightfill:IGraphicsFill;
		]]>
	</mx:Script>
	<mx:Label width="100%" textAlign="center" text="{data.label}" verticalCenter="0"
		fontFamily="{data.fontname}" fontSize="{data.fontsize}" color="{StyleManager.getColorName(data.fontcolor)}" />
</flexlib:CanvasButton>